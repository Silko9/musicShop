@model musicShop.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Подробности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Client.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Client.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Client.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Client.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Client.Patronymic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Client.Patronymic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DateCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.DateCreate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DateDelivery)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.DateDelivery)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Order.Id">Изменить</a> |
    <a asp-action="Index">Вернуться назад</a>
    <a asp-controller="ReportOrder" asp-action="Index" asp-route-id="@Model.Order.Id">Скачать отчет</a>
</div>

<hr>
<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Позиции</h4>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="Create" asp-controller="Loggings" asp-route-id="@Model.Order.Id" asp-route-from="Orders" class="btn btn-info">Добавить позицию</a>
        </div>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Loggings.First().Record)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loggings.First().Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Loggings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Record.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-controller="Loggings" asp-action="Edit" asp-route-fromId="@Model.Order.Id" asp-route-id="@item.Id" asp-route-from="Orders">Изменить</a> |
                    <a asp-controller="Loggings" asp-action="Details" asp-route-fromId="@Model.Order.Id" asp-route-id="@item.Id" asp-route-from="Orders">Подробности</a> |
                    <a asp-controller="Loggings" asp-action="Delete" asp-route-fromId="@Model.Order.Id" asp-route-id="@item.Id" asp-route-from="Orders">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>