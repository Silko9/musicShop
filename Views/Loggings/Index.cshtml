@model IEnumerable<musicShop.Models.Logging>

@{
    ViewData["Title"] = "Позиция";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Позиция</h1>

@*<p>
    <a asp-action="Create">Добавить</a>
