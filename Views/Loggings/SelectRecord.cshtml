@model IEnumerable<musicShop.Models.Record>

@{
    ViewData["Title"] = "Выбрать пластинку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Выбрать пластинку</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WholesalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Composition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetailPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WholesalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Composition.Name)
                </td>
                <td>
                    @if (ViewBag.fromCreate == true)
                    {
                        <a asp-action="Create" asp-route-from="@ViewBag.From" asp-route-recordId="@item.Id" asp-route-id="@ViewBag.Id">Выбрать</a>
                    }
                    else{
                        <a asp-action="Edit" asp-route-from="@ViewBag.From" asp-route-recordId="@item.Id" asp-route-id="@ViewBag.id">Выбрать</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewBag.fromCreate == true)
    {
        <a asp-action="Create">Вернуться назад к добавлению</a>
    }
    else{
        <a asp-action="Edit" asp-route-id="@ViewBag.id">Вернуться назад к изменению</a>
    }
</div>
