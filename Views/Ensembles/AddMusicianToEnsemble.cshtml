@model IEnumerable<musicShop.Models.Musician>

@{
    ViewData["Title"] = "Добавить музыканта к ансамблю";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить музыканта к ансамблю</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    <form method="post">
                        <input type="hidden" name="ensembleId" value="@ViewBag.EnsembleId">
                        <input type="hidden" name="musicianId" value="@item.Id">
                        <input type="submit" value="Выбрать" class="btn btn-success">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
