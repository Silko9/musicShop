@model musicShop.Models.Composition

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Произведение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameAuthor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurnameAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurnameAuthor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatronymicAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatronymicAuthor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>
    
    @if (ViewBag.isDelete == "true")
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
        </form>
    }
    else
    {
        <h4>Нельзя удалить произведение, пока есть связанные исполнения и/или пластинки!</h4>
        <a asp-action="Index">Вернуться назад</a>
    }
</div>
