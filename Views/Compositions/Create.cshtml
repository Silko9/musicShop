@model musicShop.Models.Composition

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Произведение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameAuthor" class="control-label"></label>
                <input asp-for="NameAuthor" class="form-control" />
                <span asp-validation-for="NameAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurnameAuthor" class="control-label"></label>
                <input asp-for="SurnameAuthor" class="form-control" />
                <span asp-validation-for="SurnameAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatronymicAuthor" class="control-label"></label>
                <input asp-for="PatronymicAuthor" class="form-control" />
                <span asp-validation-for="PatronymicAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreate" class="control-label"></label>
                <input asp-for="DateCreate" class="form-control" />
                <span asp-validation-for="DateCreate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
