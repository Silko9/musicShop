@model IEnumerable<musicShop.Models.Composition>

@{
    ViewData["Title"] = "Произведения";
}

<h1>Произведения</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurnameAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatronymicAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurnameAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatronymicAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
