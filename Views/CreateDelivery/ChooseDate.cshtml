<h1>Оформление поставки</h1>
<form asp-action="ChooseDate" class="form-group">
	<input type="hidden" name="ProviderId" value="@ViewBag.ProviderId" />
	<div class="form-group">
		<label class="control-label">Наименование компании:</label>
		<label class="control-label">@ViewBag.Provider.Name</label>
	</div>
	<div class="form-inline">
		<label class="control-label col-md-4">Дата доставки:</label>
		@if(ViewBag.DateError){
		<h4>Выбранная дата доставки не может быть ранее текущей даты.</h4>
		}
		<div class="col-md-8">
			<input type="date" name="Date" class="form-control"/>
		</div>
	</div>
	<div class="form-group pt-3">
		<input type="submit" value="Далее" class="btn btn-primary" />
	</div>
</form>
