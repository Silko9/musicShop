@model IEnumerable<musicShop.Models.Provider>

@{
    ViewData["Title"] = "Оформление поставки";
}

<h1>Оформление поставки</h1>
<h3>Выбор поставщика</h3>

<p>
    <div class="form-group">
        <a asp-controller="Providers" asp-action="Create" asp-route-fromCreateDelivery="true" class="btn btn-info">
            Добавить</a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegalAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LegalAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIN)
                </td>
            <td>
                    @using (Html.BeginForm())
                    {
                        <div>
                            <input type="hidden" name="ProviderId" value="@item.Id" />
                            <input type="submit" value="Выбрать" class="btn btn-primary" />
                        </div>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
