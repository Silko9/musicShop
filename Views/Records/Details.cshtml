@model musicShop.Models.ViewModels.RecordDetailsViewModel

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <h4>Пластинки</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Record.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Record.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Record.RetailPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Record.RetailPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Record.WholesalePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Record.WholesalePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Record.Composition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Record.Composition.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Record.Id">Изменить</a> |
    <a asp-action="Index">Вернуться назад</a>
</div>

<hr>
<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Исполнения</h4>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="AddPerformanceToRecord" asp-route-id="@Model?.Record.Id" class="btn btn-info">Добавить исполнение</a>
        </div>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Performances.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performances.First().Ensemble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performances.First().CircumstancesExecution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performances.First().Composition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Performances)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ensemble)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CircumstancesExecution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Composition)
                </td>
                <td>
                    <a asp-controller="Performance" asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-controller="Performance" asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                    <a asp-controller="Performance" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
